{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist"
    /* "types": ["node"]

    */
    //"typeRoots" : ["./node_modules/@types", "./typings"]
  },
  "include": ["src/*.ts"],
  // "exclude": ["node_modules"]
  /**
   * For use with monorepos with multiple tsconfigs
   *
   *  "referencess": [{ "path": "packages/cli/tsconfig.json" }]
   */
  "ts-node": {
    "esm": true
    /* 
    "cwd": "/d/project",
    */
  }
}
