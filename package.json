{
  "name": "@tbusillo/teensy-typescript-package",
  "author": "Tom Busillo",
  "version": "0.0.1",
  "description": "A teensy-tiny Node.js TypeScript package template.",
  "type": "module",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/tbusillo/teensy-typescript-package.git"
  },
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "unbuild",
    "start": "nodemon --exec ts-node src/index.ts",
    "prebuild": "test \"$CI\" = true && npx pnpm install -r --store=node_modules/.pnpm-store || echo skiping pnpm install",
    "build": "unbuild",
    "stub": "pnpm unbuild --stub",
    "test": "jest",
    "pre:ci:test": "pnpm install -r --store=node_modules/.pnpm-store",
    "ci:test": "pnpm build && pnpm test",
    "clean": "rm -rf dist",
    "release": "standard-version"
  },
  "keywords": [
    "typescript",
    "node",
    "package",
    "template"
  ],
  "nodemonConfig": {
    "include": [
      "src",
      "test"
    ],
    "ignore": [
      "dist",
      "node_modules"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^29.0.2",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.15",
    "dotenv": "^16.0.2",
    "jest": "^29.1.2",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "unbuild": "^0.8.10"
  }
}
